<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/containerSettingsFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/setProfilePhotoButtonSettingsFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Set Profile Photo"
            android:textSize="24sp" />

        <Button
            android:id="@+id/setPasswordButtonSettingsFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Set Password"
            android:textSize="24sp" />

        <Button
            android:id="@+id/logoutButtonSettingsFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:textSize="24sp" />

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBarSettingsFragment"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>